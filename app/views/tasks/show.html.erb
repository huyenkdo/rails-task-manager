<div class="container my-4">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task), class: "text-decoration-none text-dark" do %>
      <div class="d-flex rounded border border-secondary align-items-center p-3" style="height: 40px">
        <i class="fa-solid fa-pencil"></i>
        <p class="ms-3 mb-0">Edit this task</p>
      </div>
    <% end %>
  </div>
  <p class="alert alert-secondary mt-3"><%= @task.details %></p>
  <div class="d-flex align-content-center">
    <i class="fa-solid fa-arrow-rotate-left align-self-center"></i>
    <%= link_to "Back to list", tasks_path, class: "text-decoration-none text-dark ps-1" %>
  </div>
</div>
